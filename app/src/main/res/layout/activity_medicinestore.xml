<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FDE1E1"
    android:layout_height="match_parent"
    tools:context=".medicinestore">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#DFEA7269"
        android:orientation="vertical"
        android:layout_height="350dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/pharmacyvir"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="Pharmacy"
        android:padding="20dp"
        android:layout_gravity="center"
        android:textColor="#DFEA7269"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Well Soon"
        android:drawableStart="@drawable/wellsoon"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#DFEA7269"
        android:padding="20dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="150dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="150dp"
                android:layout_margin="0dp">

                <ImageView
                    android:id="@+id/apollo1"
                    android:layout_width="match_parent"
                    android:src="@drawable/pharmacy"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent">

                </ImageView>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/apollo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apollo Pharmacy"
            android:textColor="#027D9D"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>


    <Button
        android:id="@+id/apollo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:backgroundTint="#DFEA7269"
        android:text="Purchase"/>








</LinearLayout>